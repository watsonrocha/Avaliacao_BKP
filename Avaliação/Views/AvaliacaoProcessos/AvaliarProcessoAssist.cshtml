    <script>
        $(document).ready(function () {
            $("#Checkbox130").click(function () {
                // habilita o campo
                $("button").prop("disabled", false);
            });
        });
          $(document).ready(function () {
            $("#Checkbox131").click(function () {
                // habilita o campo
                $("button").prop("disabled", false);
            });
          });
          $(document).ready(function () {
            $("#Checkbox132").click(function () {
                // habilita o campo
                $("button").prop("disabled", false);
            });
          });
          $(document).ready(function () {
            $("#Checkbox133").click(function () {
                // habilita o campo
                $("button").prop("disabled", false);
            });
        });
    </script>
}





